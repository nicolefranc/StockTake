<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context=".auth.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_reg"
        android:background="@drawable/white_rectangle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stock_take"
            android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="60dp"
            android:text="@string/app_name"
            android:textSize="@dimen/text_title"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:font="@font/orienta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>

        <include layout="@layout/login_tab"
            android:id="@+id/loginTab"
            android:layout_below="@id/stock_take"
            app:layout_constraintTop_toBottomOf="@+id/stock_take"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/relative_reg">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="@dimen/components_sm_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_studentId"
                android:font="@font/orienta"
                android:textColor="@color/black"
                android:textSize="19dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_studentId">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailField"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_password"
                android:font="@font/orienta"
                android:textColor="@color/black"
                android:textSize="19dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pwField"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_repassword"
                android:font="@font/orienta"
                android:textColor="@color/black"
                android:textSize="19dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_repassword">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/repwField"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_fifthRow"
                android:font="@font/orienta"
                android:textColor="@color/black"
                android:textSize="19dp"/>

            <Spinner android:id="@+id/fifth_row"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/role"
                android:font="@font/orienta"
                android:textColor="@color/black"
                android:textSize="19dp"/>

            <Spinner android:id="@+id/role"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/studentID"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/components_md_margin"
                android:background="@drawable/rounded_rectangle"
                android:text="@string/action_register"
                android:textColor="@color/white"
                android:font="@font/orienta"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>