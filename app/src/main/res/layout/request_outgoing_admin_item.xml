<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="68"
            android:layout_height="wrap_content"
            android:paddingRight="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/outgoingRequestClubName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Club name"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/outgoingRequestUserType"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="User Type"
                android:textColor="#a9a9a9"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:layout_below="@id/requestName"

                />

        </LinearLayout>

        <Button
            android:id="@+id/btnOutgoingAdminRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_regular"
            android:text="Send Admin Request"
            android:padding="5dp"
            android:textAllCaps="false"
            android:textColor="@color/blue_main1" />










    </LinearLayout>

</LinearLayout>